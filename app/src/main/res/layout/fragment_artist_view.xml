<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/main_activity_background"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/fragment_artist_view_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/fragment_artist_view_back"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_arrow_back_24"
                app:tint="@color/textColor"
                android:background="@drawable/none_drawable"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/library"
            android:textColor="@color/textColor"
            android:textFontWeight="700"
            android:textSize="30sp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageButton
                android:id="@+id/fragment_artist_view_search"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/baseline_search_24"
                android:scaleType="fitCenter"
                android:rotation="-90"
                app:tint="@color/textColor"
                android:background="@drawable/none_drawable"/>
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:ignore="NestedWeights" />
            <ImageButton
                android:id="@+id/fragment_artist_view_settings"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_settings_24"
                app:tint="@color/textColor"
                android:background="@drawable/none_drawable"/>
        </LinearLayout>
    </LinearLayout>
    <GridView
        android:id="@+id/artist_view_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="4"
        android:horizontalSpacing="0dp"
        android:verticalSpacing="0dp"/>
</LinearLayout>